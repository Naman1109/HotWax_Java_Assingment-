<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register_db</servlet-name>
        <servlet-class>register_db</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_db</servlet-name>
        <servlet-class>login_db</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>update</servlet-name>
        <servlet-class>update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register_db</servlet-name>
        <url-pattern>/register_db</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_db</servlet-name>
        <url-pattern>/login_db</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>update</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <filter>  
        <filter-name>f1</filter-name>  
        <filter-class>Filters.filter1</filter-class>  
    </filter>  
    <filter-mapping>  
        <filter-name>f1</filter-name>  
        <url-pattern>/User_home.jsp</url-pattern>  
        <url-pattern>/search_user.html</url-pattern>  
        <url-pattern>/search_user.jsp</url-pattern>  
        <url-pattern>/showdata.jsp</url-pattern>  
        <url-pattern>/delete.jsp</url-pattern>  
        <url-pattern>/update.html</url-pattern>  
        <url-pattern>/logout.jsp</url-pattern>  
    </filter-mapping>  
</web-app>
